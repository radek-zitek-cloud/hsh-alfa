# Application Configuration
APP_NAME="Home Sweet Home"
APP_VERSION="1.0.0"
DEBUG=false

# Logging Configuration
# Supported levels: DEBUG, INFO, WARNING, ERROR, CRITICAL
# Default: INFO
LOG_LEVEL=INFO

# Database Configuration
DATABASE_URL=sqlite+aiosqlite:////data/home.db

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_ENABLED=true

# Security Configuration
# IMPORTANT: Generate a secure secret key for production
# Generate with: python -c 'import secrets; print(secrets.token_urlsafe(32))'
SECRET_KEY=change-this-in-production

# OAuth2 Configuration
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/callback

# JWT Configuration
JWT_SECRET_KEY=
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=168

# Frontend Configuration
FRONTEND_URL=http://localhost:3000

# CORS Configuration
# Comma-separated list of allowed origins
# Example: CORS_ORIGINS=https://home.example.com,http://localhost:3000
# Default: http://localhost:3000,http://localhost:5173,http://localhost:8080
CORS_ORIGINS=

# Widget Configuration
WIDGET_CONFIG_PATH=/app/config/widgets.yaml
BOOKMARK_CONFIG_PATH=/app/config/bookmarks.json

# API Keys (Optional - configure per widget as needed)
WEATHER_API_KEY=
EXCHANGE_RATE_API_KEY=
NEWS_API_KEY=

# Cache Settings
DEFAULT_CACHE_TTL=3600

# Scheduler
SCHEDULER_ENABLED=true
